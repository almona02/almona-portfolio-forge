# ALMONA Portfolio Forge - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application version (for error reporting and debugging)
VITE_APP_VERSION=2.0.0

# Environment mode
VITE_NODE_ENV=development

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Google Analytics 4 tracking ID for performance metrics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Custom performance monitoring endpoint
VITE_PERFORMANCE_ENDPOINT=https://api.almona-egypt.com/performance

# Enable/disable performance monitoring in production
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# ERROR REPORTING & MONITORING
# =============================================================================

# Custom error reporting endpoint
VITE_ERROR_REPORTING_ENDPOINT=https://api.almona-egypt.com/errors

# Enable error tracking (set to 'true' to enable)
VITE_ENABLE_ERROR_TRACKING=true

# Sentry DSN (if using Sentry for error tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API base URL
VITE_API_BASE_URL=https://api.almona-egypt.com

# Python backend API URL
VITE_PYTHON_API_URL=http://localhost:8000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Google Cloud API key for AI services
VITE_GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key

# Google Maps API key
VITE_MAPS_API_KEY=your_google_maps_api_key

# SMS service API key (for notifications)
VITE_SMS_API_KEY=your_sms_api_key

# =============================================================================
# AI & ML SERVICES
# =============================================================================

# TensorFlow model URL for AI features
VITE_TENSORFLOW_MODEL_URL=https://cdn.almona-egypt.com/models/

# Hugging Face API token
VITE_HUGGINGFACE_API_TOKEN=your_huggingface_token

# OpenAI API key (if using OpenAI services)
VITE_OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# 3D & AR FEATURES
# =============================================================================

# AR/3D model service API key
VITE_AR_API_KEY=your_ar_api_key

# 3D model CDN base URL
VITE_MODELS_CDN_URL=https://cdn.almona-egypt.com/3d-models/

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Supabase configuration (if using Supabase)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT secret key (for backend)
VITE_JWT_SECRET=your_jwt_secret_key

# =============================================================================
# PAYMENT & E-COMMERCE
# =============================================================================

# Stripe publishable key (for payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# PayPal client ID
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Email service configuration
VITE_EMAIL_SERVICE_URL=https://api.emailservice.com
VITE_EMAIL_API_KEY=your_email_api_key

# WhatsApp Business API
VITE_WHATSAPP_API_KEY=your_whatsapp_api_key

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable debug mode (shows additional logging)
VITE_DEBUG_MODE=false

# Enable React DevTools in production
VITE_ENABLE_REACT_DEVTOOLS=false

# Enable service worker in development
VITE_ENABLE_SW_DEV=false

# =============================================================================
# CDN & ASSET OPTIMIZATION
# =============================================================================

# CDN base URL for static assets
VITE_CDN_BASE_URL=https://cdn.almona-egypt.com

# Image optimization service
VITE_IMAGE_OPTIMIZATION_URL=https://images.almona-egypt.com

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language
VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,ar

# =============================================================================
# SOCIAL MEDIA & MARKETING
# =============================================================================

# Facebook App ID
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# Twitter API key
VITE_TWITTER_API_KEY=your_twitter_api_key

# LinkedIn API key
VITE_LINKEDIN_API_KEY=your_linkedin_api_key

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Tag Manager ID
VITE_GTM_ID=GTM-XXXXXXX

# Facebook Pixel ID
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Hotjar tracking code
VITE_HOTJAR_ID=your_hotjar_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
VITE_ENABLE_3D_VIEWER=true
VITE_ENABLE_AR_FEATURES=true
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_VOICE_SEARCH=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true

# =============================================================================
# PERFORMANCE BUDGETS
# =============================================================================

# Performance thresholds (in milliseconds)
VITE_PERFORMANCE_BUDGET_LCP=2500
VITE_PERFORMANCE_BUDGET_FID=100
VITE_PERFORMANCE_BUDGET_CLS=0.1

# Bundle size limits (in KB)
VITE_BUNDLE_SIZE_LIMIT=500
VITE_CHUNK_SIZE_LIMIT=200

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Content Security Policy settings
VITE_CSP_REPORT_URI=https://api.almona-egypt.com/csp-report

# CORS allowed origins
VITE_CORS_ORIGINS=https://almona-egypt.com,https://www.almona-egypt.com

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup service configuration
VITE_BACKUP_SERVICE_URL=https://backup.almona-egypt.com
VITE_BACKUP_API_KEY=your_backup_api_key
