# Environment Configuration
# Copy this file to .env and update with your values

# API Settings
DEBUG=false
SECRET_KEY=your-secret-key-here-change-this

# CORS Settings
FRONTEND_URL=http://localhost:5173

# Redis Settings
REDIS_URL=redis://localhost:6379

# Model Settings
MODEL_PATH=ai_services/part_detection/models/yolov8n.pt
CONFIDENCE_THRESHOLD=0.7
MLFLOW_TRACKING_URI=file:./mlruns

# To specify different model versions, use the following format:
# MODEL_VERSIONS__<VERSION_NAME>=<path_to_model>
# For example:
# MODEL_VERSIONS__V2=ai_services/part_detection/models/yolov8s.pt
# MODEL_VERSIONS__V3=ai_services/part_detection/models/yolov8m.pt

# Security
VALID_API_KEYS=your-secret-api-key,another-secret-api-key
RATE_LIMIT=100/minute


# File Upload
UPLOAD_DIR=uploads
MAX_IMAGE_SIZE=10000000

# Development
LOG_LEVEL=INFO
